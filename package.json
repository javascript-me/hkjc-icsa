{
  "name": "hkjc-ics-client",
  "version": "1.0.0",
  "description": "Integrated Console System Client",
  "main": "index.js",
  "config": {},
  "scripts": {
    "clear": "shx rm -rf ./node_modules/",
    "clean": "shx rm -rf ./dist/",
    "init": "run-s init:dist init:config init:version",
    "init:dist": "shx mkdir -p dist/thin dist/simulator dist/cache dist/apidoc",
    "init:config": "shx touch client-config/config-override.json",
    "init:version": "node build/init-version.js",
    "lint": "run-p lint:less lint:js",
    "lint:less": "stylelint \"client-app/**/*.less\" --syntax less",
    "lint:js": "eslint --fix --ignore-pattern=\"dist/*\" **/*.js **/*.json",
    "html": "run-s html:index html:version",
    "html:index": "shx cp client-app/index.html dist/thin/",
    "html:version": "node build/html-version.js",
    "css": "lessc --strict-imports --clean-css=\"\" --autoprefix=\"IE >= 11,last 2 Edge versions,last 5 Chrome versions\" --source-map --source-map-less-inline --source-map-rootpath=client-app client-app/index.less dist/thin/index.min.css",
    "js": "browserify client-app/index.js --debug -p [minifyify --map index.min.js.map --output dist/thin/index.min.js.map --uglify [--compress --mangle] ] > dist/thin/index.min.js",
    "resources": "shx cp -r client-resources/. dist/thin/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "run-s clean init lint && run-p build:client build:server",
    "build:client": "run-p html css js resources",
    "build:server": "run-p build:apidoc build:cache build:simulator",
    "build:apidoc": "apidoc -i server-simulator -i server-cache -o dist/apidoc/",
    "build:cache": "browserify server-cache/index.js --debug --node -p [minifyify --map index.min.js.map --output dist/cache/index.min.js.map --uglify [--compress --mangle] ] > dist/cache/index.min.js",
    "build:simulator": "browserify server-simulator/index.js --debug --node -p [minifyify --map index.min.js.map --output dist/simulator/index.min.js.map --uglify [--compress --mangle] ] > dist/simulator/index.min.js",
    "dev": "run-s dev:server:stop init dev:build dev:server:start",
    "dev:server:stop": "pm2 stop hkjc-ics-server || true",
    "dev:server:start": "pm2 start dist/simulator/index.min.js --name=hkjc-ics-server",
    "dev:build": "run-p lint build:server html css js resources",
    "dist": "echo \"Error: no distributions specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git@git.epam.com:hkjc-icsa.git"
  },
  "author": "GÃ¡bor Czigola <gabor_czigola@epam.com>",
  "private": true,
  "dependencies": {
    "apidoc": "0.16.1",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-es2016": "6.16.0",
    "babel-preset-es2017": "6.16.0",
    "babel-preset-react": "6.16.0",
    "babelify": "7.3.0",
    "body-parser": "1.15.2",
    "bootstrap": "3.3.7",
    "browserify": "13.1.0",
    "browserify-shim": "3.8.12",
    "eslint": "3.7.0",
    "eslint-config-standard": "6.2.0",
    "eslint-config-standard-jsx": "3.2.0",
    "eslint-config-standard-react": "4.2.0",
    "eslint-plugin-json": "1.2.0",
    "eslint-plugin-jsx": "0.0.2",
    "eslint-plugin-promise": "2.0.1",
    "eslint-plugin-react": "6.3.0",
    "eslint-plugin-standard": "2.0.1",
    "express": "4.14.0",
    "jquery": "2.2.4",
    "less": "2.7.1",
    "less-plugin-autoprefix": "1.5.1",
    "less-plugin-clean-css": "1.5.1",
    "minifyify": "7.3.3",
    "moment": "2.15.1",
    "morgan": "1.7.0",
    "npm-run-all": "3.1.0",
    "nw": "0.17.5-sdk",
    "pm2": "2.0.18",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-router": "2.8.1",
    "shelljs": "0.7.4",
    "shx": "0.1.4",
    "source-map-support": "0.4.5",
    "stylelint": "7.3.1",
    "stylelint-config-standard": "13.0.2"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": "tab",
      "color-hex-case": "upper",
      "color-hex-length": "long"
    }
  },
  "eslintConfig": {
    "plugins": [
      "json",
      "promise",
      "jsx",
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "standard",
      "standard-jsx",
      "standard-react"
    ],
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": "off",
      "prefer-arrow-callback": "error",
      "react/jsx-indent": [
        2,
        "tab"
      ],
      "react/jsx-indent-props": [
        2,
        "tab"
      ]
    },
    "globals": {}
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "babelify"
    ]
  },
  "browserify-shim": {},
  "babel": {
    "presets": [
      "es2015",
      {},
      "es2016",
      {},
      "es2017",
      {},
      "react",
      {}
    ],
    "plugins": []
  }
}
